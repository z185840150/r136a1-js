{
  "standard.enable": true,
  "standard.options": {
    "autoFix": true,
    "globals": ["__config", "__sockets", "PORT", "CRAWLER", "__proxys"],
    "ignore": [
      "node_modules/**",
      "dist/**",
      "logs/**",
      "config/**"
    ],
    "parser": "babel-eslint"
  },
  "standard.autoFixOnSave": true,
  "standard.validate": [
    "javascript",
    "javascriptreact"
  ],
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "dist": true,
    ".vscode": true,
    "yarn.lock": true
  },
  "npm-intellisense.importES6": true,
  "npm-intellisense.importQuotes": "'",
  "npm-intellisense.importLinebreak": ";\r\n",
  "npm-intellisense.importDeclarationType": "const",
}